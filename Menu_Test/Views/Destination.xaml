<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Menu_Test.Views.Destination" Title="Destination">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <StackLayout Orientation="Horizontal" x:Name="destinationInfo">
                <StackLayout>
                <Label Text="Enter City and State: " VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="destination" Text="{Binding .}" Placeholder="Milwaukee, WI" WidthRequest="200"/>
                    </StackLayout>
            </StackLayout>
            <StackLayout>
                <Button x:Name="submit" Text="Submit" Clicked="Submit_Button_Clicked"/>
                <Button x:Name="reset" Text="Reset Trip" Clicked="Reset_Button_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
